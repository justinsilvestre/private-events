<% if !(current_user) %>
	<%= link_to 'Login', login_path %> to RSVP.
<% elsif event.upcoming? %>
	<% if (current_user && current_user.attending?(event)) %>
		You RSVP'd. <%= link_to 'Undo', rsvp_event_path(event), method: :delete, remote: true %>
	<% else %>
		<%= link_to 'RSVP', rsvp_event_path(event), method: :post, remote: true %>
	<% end %>
<% end %>