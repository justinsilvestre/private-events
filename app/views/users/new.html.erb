<h1>Sign Up</h1>
<%= form_for(@user) do |f| %>
	
	<%= render('shared/error_messages', object: f.object) if f.object.errors.any? %>

	<%= f.label :email %>
	<%= f.text_field :email %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation, "Confirm password" %>
	<%= f.password_field :password_confirmation %>

	<%= f.submit %>
	
<% end %>